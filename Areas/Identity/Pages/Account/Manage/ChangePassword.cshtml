@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "~/Views/Shared/_Layout4.cshtml";

}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="col-xl-11 order-xl-1 pl-0 pr-0">
    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0"><i class="bi-lock-fill"></i> Change password</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form id="change-password-form" method="post">
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group focused">
                                <label class="form-control-label" for="input-username">Old Password</label>
                                <input asp-for="Input.OldPassword"  type="text" id="input-username" class="form-control form-control-alternative" />
                                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-username">New Password</label>
                                <input asp-for="Input.NewPassword"  type="text" id="input-username" class="form-control form-control-alternative" />
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group focused">
                                <label class="form-control-label" for="input-username">Confirm Password</label>
                                <input asp-for="Input.ConfirmPassword"  type="text" id="input-username" class="form-control form-control-alternative" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    </div>
                <div class="d-flex justify-content-center">
                    <div class="d-flex">
                        <button id="update-profile-button" type="submit" class="btn btn-primary w-auto pl-4 pr-4 align-items-center">Update password</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}