@model Ataa.Models.Job

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="col">
    <div class="row justify-content-center">
        <div class="col-md-6 grid-margin stretch-card pt-4 pb-5">
            <div class="card">
                <div class="card-body">
                    <div class="clearfix">
                        <h4 class="card-title d-flex justify-content-center mb-4">Job Details</h4>
                        <hr>
                    </div>
                    <div class="col">
                        <dl class="row pt-1 pb-2">
                            <dt class="col">
                                @Html.DisplayNameFor(model => model.JobName)
                            </dt>
                            <dd class="col text-black-50 font-weight-bold">
                                @Html.DisplayFor(model => model.JobName)
                            </dd>
                        </dl>
                        <dl class="row">
                            <dt class="col">
                                @Html.DisplayNameFor(model => model.SectionId)
                            </dt>
                            <dd class="col text-black-50 font-monospace font-weight-bold">
                                @Html.DisplayFor(model => model.SectionId)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <a class="btn btn-outline-light w-auto ml-3 pt-3 pr-5 " asp-action="Job">Back</a>
        <a class="btn btn-outline-light w-auto ml-3 pt-3 pr-5 d-flex justify-content-center" asp-action="Editj" asp-route-id="@Model.Id">Edit</a>
    </div>
</div>