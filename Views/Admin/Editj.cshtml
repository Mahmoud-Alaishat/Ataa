@model Ataa.Models.Job

@{
    ViewData["Title"] = "Edit Job";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="col-md-6 grid-margin stretch-card pt-4 pb-5">
    <div class="card">
        <div class="card-body">
            <div class="clearfix">
                <h4 class="card-title d-flex justify-content-center mb-4">Job</h4>
            </div>
            <div class="col">
                <form asp-action="Editj" asp-controller="Admin">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group ">
                        <label asp-for="JobName" class="control-label font-weight-bold text-black-50">Job Name</label>
                        <input asp-for="JobName" class="form-control" />
                        <span asp-validation-for="JobName" class="text-danger"></span>
                    </div>
                     
                    <div class="form-group">
                        <label asp-for="SectionId" class="control-label font-weight-bold text-black-50">Section</label>
                        <select class="form-select" asp-for="SectionId" asp-items="@(new SelectList(ViewBag.message,"Id","SectionName"))"></select>
                    </div>
                        <div class="form-group d-flex justify-content-center">
                            <input type="submit" value="Save" class="btn btn-dark btn-lg" />
                        </div>
                </form>
            </div>       
        </div>
    </div>
</div>


<div class="row">
    <a asp-action="Job" class="btn btn-outline-light w-auto ml-3 pt-3 pr-5">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
