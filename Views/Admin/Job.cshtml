@model IEnumerable<Ataa.Models.Job>

@{
    ViewData["Title"] = "Jobs";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="col">
<div class="row d-flex justify-content-start">
        <a asp-action="Createj" class="btn btn-outline-light w-auto  pt-3 pr-5 mb-2 ml-4">Create Job</a>
</div>
<div class="row">

    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Jobs</h4>
                <div class="table-responsive">
                    <table class="table">

                        <thead>
                            <tr>
                                <th>
                                    Job Name
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SectionId)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.JobName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SectionId)
                                    </td>
                                    <td>
                                        <a asp-action="Editj" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Detailsj" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Deletej" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>