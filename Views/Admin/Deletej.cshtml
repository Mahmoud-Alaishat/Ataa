@model Ataa.Models.Job

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="col-md-6 grid-margin stretch-card pt-4 pb-5 mb-5">
    <div class="card">
        <div class="card-body">
            <div class="clearfix">
                <h4 class="card-title d-flex justify-content-center mb-5">Are you sure you want to delete this Job?</h4>
            </div>
               
                <div class="col">
                    <div class="row">
                        <dl class="row pt-1 pb-2">
                            <dt class="col">
                                @Html.DisplayNameFor(model => model.JobName)
                            </dt>
                            <dd class="col text-black-50 font-weight-bold">
                                @Html.DisplayFor(model => model.JobName)
                            </dd>
                        </dl>
                        <dl class="row">
                            <dt class="col">
                                @Html.DisplayNameFor(model => model.SectionId)
                            </dt>
                            <dd class="col text-black-50 font-monospace font-weight-bold">
                                @Html.DisplayFor(model => model.SectionId)
                            </dd>
                        </dl>
                    </div>

                    <div class="row">
                        <form asp-action="Deletej">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger float-end" />
                        </form>
                    </div>
                </div>
        </div>
    </div>
</div>
<div class="row">
    <a asp-action="Job" class="btn btn-outline-light w-auto ml-3 pt-3 pr-5 mt-5">Back</a>
</div>