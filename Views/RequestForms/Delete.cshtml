@model Ataa.Models.RequestForm

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="row pl-0 pr-0">
    <div class="col-md-12 grid-margin stretch-card pt-4 pb-5 mb-5">
        <div class="card">
            <div class="card-body">
                <div class="clearfix">
                    <h4 class="card-title d-flex justify-content-center mb-5">Are you sure you want to delete this Service?</h4>
                </div>

                <div class="col">
                    <div class="row">
                        <dl class="row pt-1 pb-2">
                            <dd class="col text-black-50 font-weight-bold">
                                @Html.DisplayFor(model => model.Service)
                            </dd>
                        </dl>

                    </div>

                    <div class="row">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger float-end" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <a asp-action="Index" class="btn btn-outline-light w-auto ml-3 pt-3 pr-5 mt-4">Back</a>
    </div>
</div>